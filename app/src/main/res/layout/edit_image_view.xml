<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/image_view_id"
    android:clickable="true"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/darkgray"
    android:layout_gravity="center_horizontal"
    android:focusable="true">

    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="541dp"
            android:background="@color/darkgray"
            android:orientation="vertical">

        <ja.burhanrashid52.photoeditor.PhotoEditorView
                android:id="@+id/image_id"
                android:layout_width="365dp"
                android:layout_height="322dp"
                android:background="@color/darkgray"
                android:scaleType="centerCrop"
                android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="16dp" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp" app:layout_constraintBottom_toBottomOf="@+id/draw_button"
                android:layout_marginBottom="8dp" app:layout_constraintHorizontal_bias="0.666"
                app:layout_constraintVertical_bias="0.238">
        </ja.burhanrashid52.photoeditor.PhotoEditorView>

        <SeekBar
                android:id="@+id/brush_sizebar"
                android:layout_width="310dp"
                android:layout_height="18dp"
                android:layout_gravity="center"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@+id/image_id" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp" app:layout_constraintBottom_toBottomOf="@+id/draw_button"
                android:layout_marginBottom="8dp" app:layout_constraintVertical_bias="0.0"/>

        <SeekBar
                android:id="@+id/brush_colorbar"
                android:layout_width="330dp"
                android:layout_height="15dp"
                android:layout_gravity="center"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp"
                android:layout_marginTop="44dp"
                app:layout_constraintTop_toBottomOf="@+id/image_id"
                app:layout_constraintBottom_toBottomOf="@+id/draw_button" android:layout_marginBottom="8dp"
                app:layout_constraintVertical_bias="0.016"/>

        <Button
                android:id="@+id/draw_button"
                android:layout_width="78dp"
                android:layout_height="53dp"
                android:background="@drawable/ic_paint_brush"
                android:backgroundTint="@color/teal"
                android:fontFamily="monospace"
                android:gravity="top|center"
                android:shadowColor="@color/aqua"
                android:text="@string/draw"
                android:textColor="@color/white"
                android:visibility="visible"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp"
                app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="8dp"
                app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="8dp"
                app:layout_constraintVertical_bias="0.932"/>

        <Button
                android:id="@+id/erase_button"
                android:layout_width="50dp"
                android:layout_height="57dp"
                android:background="@drawable/ic_blue_eraser"
                android:fontFamily="monospace"
                android:gravity="top|center"
                android:text="@string/erase"
                android:textColor="@color/white"
                android:visibility="visible"
                app:layout_constraintStart_toStartOf="@+id/draw_button"
                android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp" android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/image_id" app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="8dp" app:layout_constraintHorizontal_bias="0.49"
                app:layout_constraintVertical_bias="0.698"/>

        <Button
                android:id="@+id/text_button"
                android:layout_width="59dp"
                android:layout_height="56dp"
                android:background="@drawable/ic_text"
                android:fontFamily="monospace"
                android:gravity="top|center_horizontal"
                android:text="@string/text"
                android:textColor="@color/white"
                android:visibility="visible"
                app:layout_constraintStart_toStartOf="@+id/undo_button"
                android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp" app:layout_constraintHorizontal_bias="0.219"
                android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/image_id"
                app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="8dp"
                app:layout_constraintVertical_bias="0.691"/>

        <Button
                android:id="@+id/undo_button"
                android:layout_width="61dp"
                android:layout_height="57dp"
                android:background="@drawable/ic_undo"
                android:text="Undo"
                android:textColor="@color/white"
                android:visibility="visible"
                android:gravity="top|center_horizontal" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.006" android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/image_id" app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="8dp" app:layout_constraintVertical_bias="0.698"/>

        <Button
                android:id="@+id/redo_button"
                android:layout_width="75dp"
                android:layout_height="58dp"
                android:background="@drawable/ic_redo"
                android:text="Redo"
                android:textColor="@color/white"
                android:visibility="visible"
                android:gravity="top|center_horizontal"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.996"
                android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/image_id"
                app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="8dp"
                app:layout_constraintVertical_bias="0.706"/>

        <Button
                android:id="@+id/save_button"
                android:layout_width="62dp"
                android:layout_height="54dp"
                android:background="@drawable/ic_save"
                android:text="Save"
                android:textColor="@color/white"
                android:visibility="visible"
                android:gravity="top|center_horizontal"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                app:layout_constraintHorizontal_bias="1.0" app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="8dp" app:layout_constraintBottom_toBottomOf="@+id/image_id"
                android:layout_marginBottom="8dp" app:layout_constraintVertical_bias="0.0"/>

    </android.support.constraint.ConstraintLayout>

    </LinearLayout>